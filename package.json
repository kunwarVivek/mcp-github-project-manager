{
  "name": "github-project-manager",
  "version": "0.1.0",
  "type": "module",
  "exports": "./build/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc -p tsconfig.build.json && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "start": "node build/index.js",
    "dev": "ts-node-dev --esm --respawn --transpile-only src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs --coverage",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.e2e.config.mjs",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf build coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "*",
    "@octokit/graphql": "^8.2.1",
    "@octokit/openapi-types": "^24.0.0",
    "@octokit/rest": "^21.1.1",
    "@octokit/types": "^13.8.0",
    "axios": "^1.8.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "nock": "^14.0.1",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
